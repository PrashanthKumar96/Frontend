import React, { useEffect, useState } from "react";
import { Chart } from "react-google-charts";
import axios from "axios";

export default function Analytics() {
  const [statusData, setStatusData] = useState({});

  useEffect(() => {
    // Fetch status data
    axios
      .get("http://localhost:9091/expense/getByStatus")
      .then((response) => {
        console.log(response.data); // Verify the structure of the received data
        setStatusData(response.data);
      })
      .catch((err) => console.log(err));
  }, []);

  // Function to update status data based on the selected month
  const updateStatusData = (selectedMonth) => {
    const monthStatusData = statusData[selectedMonth] || [0, 0, 0];
    return [
      ["Status", "Numbers"],
      ["Approved", monthStatusData[0]],
      ["Rejected", monthStatusData[1]],
      ["Pending", monthStatusData[2]],
    ];
  };

  // Default to display data for month 1
  const selectedMonth = "1";
  const statusChartData = updateStatusData(selectedMonth);

  const options = {
    title: "Status Chart",
    is3D: true,
  };

  return (
    <div>
      <h2>Status Chart</h2>
      <Chart
        chartType="PieChart"
        data={statusChartData}
        options={options}
        width={"100%"}
        height={"400px"}
      />
    </div>
  );
}
